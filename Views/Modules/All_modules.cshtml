@model System.IO.DirectoryInfo
@{ await Html.RenderPartialAsync("_TitleSection"); }
<div id='content'></div>
<div class=container> 
    @{ 
        var i = @Model.GetDirectories().Length;
        string msg = "";
        if (i == 1) {
            msg = i + " module was found"; 
        }
        else {
            msg = i + " modules were found"; 
        }
    }
    <p> @msg </p>
    <br>
    @foreach(var subdir in Model.EnumerateDirectories())
    {
        <a asp-controller="Modules" 
            asp-action="All_resource_types"
            asp-route-year="@Model.Name"
            asp-route-module_code="@subdir.Name" 
            class="subdir"> 
        @subdir.Name 
        </a>
    }
</div>
@{ await Html.RenderPartialAsync("_Footer"); }
